#set the detector parameters
/rat/db/set DETECTOR experiment "Watchman"
/rat/db/set DETECTOR geo_file "Watchman/Watchman.geo"

/run/initialize
/process/activate Cerenkov

/vis/open OGLSX 1000x1000+0.5+0.5
#/vis/open VRML2FILE
/vis/scene/create
/vis/scene/add/volume
/vis/sceneHandler/attach
/vis/scene/add/trajectories smooth
/vis/modeling/trajectories/create/drawByCharge
/vis/modeling/trajectories/drawByCharge-0/default/setDrawStepPts true
/vis/modeling/trajectories/drawByCharge-0/default/setStepPtsSize 2
/vis/scene/add/trajectories
/vis/scene/add/hits
/vis/viewer/set/viewpointVector 1 0.5 0.5
/vis/modeling/trajectories/create/drawByParticleID
/vis/modeling/trajectories/drawByParticleID-0/set e- blue
/vis/modeling/trajectories/drawByParticleID-0/set geantino green
/vis/modeling/trajectories/drawByParticleID-0/set opticalphoton yellow
/vis/viewer/set/autoRefresh true
#/vis/scene/endOfEventAction accumulate
/tracking/FillPointCont true

/tracking/storeTrajectory
1/vis/viewer/refresh
/vis/viewer/flush


# BEGIN EVENT LOOP
/rat/proc simpledaq
#/rat/proc fitbonsai
/rat/proc count
/rat/procset update 10

/rat/proclast outroot
/rat/procset file "watchboy.root"
#END EVENT LOOP

/generator/add combo gun2:point
/generator/vtx/set e-  0 0 0 0 10.0 10.0
/generator/pos/set 0 0 0

/run/beamOn 10